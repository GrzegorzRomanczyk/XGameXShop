<Window x:Class="XGameXShop.View.NewProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XGameXShop.View"
        mc:Ignorable="d"
        Title="Nowy produkt" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Nazwa"/>
            <TextBox/>
            <TextBlock Text="Cena brutto"/>
            <TextBox/>
            <TextBlock Text="Stawka VAT"/>
            <TextBox/>
            <TextBlock Text="Kategoria wiekowa"/>
            <TextBox/>
            <ComboBox ItemsSource="{Binding ConsoleType}" SelectedItem="{Binding SelectedConsoleType}"/>
            <Button Content="Zapisz"/>
            <Button Content="Wyczyść"/>
        </StackPanel>
    </Grid>
</Window>
